@model CodeSearch.ViewModels.ProjectsViewModel

@{
    ViewBag.Title = "Project Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@Html.Partial("_PageTitle")

<div class="row w-feature-row">

    <div class="col-sm-12">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Projects.ProjectTitle)
            </dd>

            <dt>
                @Html.DisplayName("Description")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Projects.ProjectDescription)
            </dd>

        </dl>

    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Projects.ProjectId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>
</div>