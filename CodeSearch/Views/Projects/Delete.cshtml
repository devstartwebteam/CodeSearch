@model CodeSearch.ViewModels.ProjectsViewModel
@{
    ViewBag.Title = "Delete a Project";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}


@Html.Partial("_PageTitle")

<div class="row w-feature-row">

    <div class="col-sm-12">

        <div class="form-group row">
            <label class="control-label col-md-2">
                Are you sure you want to delete this?
            </label>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
            </div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Project Title")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Projects.ProjectTitle)
                </dd>

                <dt>
                    @Html.DisplayName("Project Description")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Projects.ProjectDescription)
                </dd>

            </dl>

        </div>
    </div>