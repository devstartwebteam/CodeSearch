@model CodeSearch.ViewModels.ImageViewModel

@{
    ViewBag.Title = "Add New Category";
    Layout = "~/Views/Shared/_DashboardCategories.cshtml";
}

@Html.Partial("_PageTitle")

<div class="row w-feature-row">

    @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-sm-12">

            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 offset-md-4">
                    @Html.TextBoxFor(model => model.CategoryName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 offset-md-4">
                    @Html.TextAreaFor(model => model.CategoryDescription, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ImageUpload, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 offset-md-4">
                    @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
                    @Html.ValidationMessageFor(model => model.ImageUpload, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div><!-- end col-sm-12 -->
    }

    <div class="w-back-btn">
        @Html.ActionLink("Back to List", "Index")
    </div>

</div><!-- end .w-feature-row -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
