@model CodeSearch.ViewModels.ImageViewModel

@{
    ViewBag.Title = "Delete a Category";
    Layout = "~/Views/Shared/_DashboardCategories.cshtml";
}

@Html.Partial("_PageTitle")

<div class="row w-feature-row">
    <div class="col-sm-12">

        <h3 class="w-confirm-title">Are you sure you want to delete this?</h3>

        <div class="form-group row">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 offset-md-4">
                @Html.DisplayFor(model => model.CategoryName)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.CategoryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 offset-md-4">
                @Html.DisplayFor(model => model.CategoryDescription)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 offset-md-4">
                <img src="@Model.ImageURL" class="w-index-img">
            </div>
        </div>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
}

    </div><!-- end col-sm-12 -->

</div><!-- end .w-feature-row -->